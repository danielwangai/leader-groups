#wrapper
  = render 'home/main_menu'
  #page-content-wrapper
    .container-fluid
      .row
        .col-lg-12
          %p#notice= notice
          %h1 Groups
          %p.info-content
            This is a list of all groups and leaders assigned to them.
          %table.table.table-striped
            %thead
              %tr
                %th Name
                %th Leader
                %th{:colspan => "3"}
                  Actions
                  \#{link_to new_group_path, class: "group-new" do}
                    %span.glyphicon.glyphicon-plus>
                    Add Group
            %tbody
              - @groups.each do |group|
                %tr
                  %td= group.name
                  %td= group.users.first.username
                  %td
                    = link_to group do
                      %span.glyphicon.glyphicon-folder-open
                  %td
                    = link_to edit_group_path(group) do
                      %span.glyphicon.glyphicon-pencil
                  %td
                    = link_to group, method: :delete, data: { confirm: 'Are you sure?' } do
                      %span.glyphicon.glyphicon-trash

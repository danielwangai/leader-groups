= form_for(harambee) do |f|
  - if harambee.errors.any?
    #error_explanation
      %h2
        = pluralize(harambee.errors.count, "error")
        prohibited this harambee from being saved:
      %ul
        - harambee.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :target_amount
    = f.number_field :target_amount
  .actions
    = f.submit

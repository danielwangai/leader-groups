<p id="notice"><%= notice %></p>

<h1>Harambees</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Target amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @harambees.each do |harambee| %>
      <tr>
        <td><%= harambee.description %></td>
        <td><%= harambee.target_amount %></td>
        <td><%= link_to 'Show', harambee %></td>
        <td><%= link_to 'Edit', edit_harambee_path(harambee) %></td>
        <td><%= link_to 'Destroy', harambee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Harambee', new_harambee_path %>

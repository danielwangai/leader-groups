<div id="wrapper">
  <%= render 'home/main_menu' %>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <p id="notice"><%= notice %></p>

          <h1>Archives</h1>

          <div>
            <p class="info-content">
              Below is a list of all materials uploaded for training.
            </p>
          </div>

          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @archives.each do |archive| %>
              <tr>
                <td class="info-content"><%= archive.title %></td>
                <td class="info-content"><%= archive.description %></td>
                <td class="info-content"><%= link_to 'Show', archive %></td>
                <td class="info-content"><%= link_to 'Edit', edit_archive_path(archive) %></td>
                <td class="info-content"><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Archive', new_archive_path %>
        </div>
      </div>
    </div>
  </div>
</div>

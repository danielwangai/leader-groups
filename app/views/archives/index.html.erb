<div id="wrapper">
  <%= render 'home/main_menu' %>
  
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <p id="notice"><%= notice %></p>

          <h1>Archives</h1>

          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @archives.each do |archive| %>
              <tr>
                <td><%= archive.title %></td>
                <td><%= archive.description %></td>
                <td><%= link_to 'Show', archive %></td>
                <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
                <td><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Archive', new_archive_path %>
        </div>
      </div>
    </div>
  </div>
</div>

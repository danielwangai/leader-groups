= form_for(archive) do |f|
  - if archive.errors.any?
    #error_explanation
      %h2
        = pluralize(archive.errors.count, "error")
        prohibited this archive from being saved:
      %ul
        - archive.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control"
  .form-group
    = f.label :description
    = f.text_area :description, class: "form-control"
  .form-group
    %h3 Attach documents.
    #documents
      = f.fields_for :documents do |document|
        = render 'document_fields', f: document
      .links
        = link_to_add_association "Add document", f, :documents, class: "form-button btn btn-default"
  .actions
    = f.button :submit, class: "btn btn-primary"

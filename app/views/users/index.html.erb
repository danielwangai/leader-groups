<div id="wrapper">
  <%= render 'home/main_menu' %>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">

          <h1>Users</h1>

          <table>
            <thead>
              <tr>
                <th>Username</th>
                <th>Role</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.username %></td>
                <td><%= link_to 'Show', user %></td>
                <% if can? :update, user %>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
                <% end %>

                <% if can? :destroy, user %>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>

          <br>
          <% if can? :destroy, User %>
          <%= link_to 'New User', new_user_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Role name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_name %></td>
        <td><%= role.description %></td>
        <td><%= link_to 'Show', role %></td>
        <% if can? :update, role %>
          <td><%= link_to 'Edit', edit_user_path(role) %></td>
        <% end %>

        <% if can? :destroy, role %>
          <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :destroy, User %>
  <%= link_to 'New User', new_user_path %>
<% end %>

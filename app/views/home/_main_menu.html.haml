  #sidebar-wrapper
    %ul.sidebar-nav
      %li.sidebar-brand
        %b
          %a.sidebar_menu_link{:href => "#"}
            BS Leaders
      - if can? :create, Group
        %li
          = link_to groups_path, class: "sidebar_menu_link" do
            Groups
      %li
        = link_to reports_path, class: "sidebar_menu_link" do
          %i.fa.fa-bar-chart{"aria-hidden" => "true"}
          Feedback
      %li
        = link_to reports_path, class: "sidebar_menu_link" do
          %i.fa.fa-bar-chart{"aria-hidden" => "true"}
          Reports
      %li
        = link_to archives_path, class: "sidebar_menu_link" do
          %i.fa.fa-file-archive-o{"aria-hidden" => "true"}
          Archives
      %li
        = link_to members_path, class: "sidebar_menu_link" do
          %i.fa.fa-address-book-o{"aria-hidden" => "true"}
          Members
      %li
        = link_to broadcasts_path, class: "sidebar_menu_link" do
          %i.fa.fa-bell-o{"aria-hidden" => "true"}

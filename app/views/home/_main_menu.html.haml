        %li
          = link_to users_path, class: "sidebar_menu_link" do
            %i.fa.fa-users{"aria-hidden" => "true"}
            Group Leaders
      - else
        %li
          = link_to current_user.group.name, "/groups/#{current_user.group.id}", class: "sidebar_menu_link"
